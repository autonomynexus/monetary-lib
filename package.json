{
  "name": "monetary",
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "check-exports": "attw --pack .",
    "lint": "tsc --noEmit",
    "release": "changeset publish",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "big.js": "^6.2.2"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.0",
    "@changesets/cli": "^2.28.0",
    "@types/big.js": "^6.2.2",
    "tsdown": "^0.9.0",
    "typescript": "^5.8.0",
    "vitest": "^4.0.0",
    "fast-check": "^4.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/autonomynexus/monetary-lib.git"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
